body
block content
  include head.jade
  div(class="container")
    div(style = "text-align:center;margin-top:200px;")
      div()
        input(type="password" id = "oldPwd" class="biji-normal-input" placeholder="旧密码",maxlength="20" )
      div()
        input(type="password" id = "newPwd" class="biji-normal-input" placeholder="新密码",maxlength="20" )
